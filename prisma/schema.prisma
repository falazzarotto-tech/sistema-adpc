generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdpcQuestion {
  id        String       @id @default(uuid())
  code      String       @unique // Chave natural para o Seed
  text      String
  dimension String       // Ex: DOMINANCIA, INFLUENCIA, etc.
  version   String       @default("v1")
  options   AdpcOption[]
  responses AdpcResponse[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model AdpcOption {
  id         String       @id @default(uuid())
  questionId String
  code       String       // Ex: A, B, C
  text       String
  weight     Int          @default(1)
  question   AdpcQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([questionId, code]) // Garante que não existam duas opções "A" na mesma pergunta
}

model User {
  id        String         @id @default(uuid())
  email     String         @unique
  name      String
  responses AdpcResponse[]
  createdAt DateTime       @default(now())
}

model AdpcResponse {
  id         String       @id @default(uuid())
  userId     String
  questionId String
  optionId   String
  user       User         @relation(fields: [userId], references: [id])
  question   AdpcQuestion @relation(fields: [questionId], references: [id])
  createdAt  DateTime     @default(now())
}

model AuditLog {
  id         String   @id @default(uuid())
  ts         DateTime @default(now())
  requestId  String
  actorType  String   @default("api_key")
  action     String
  ip         String?
  userAgent  String?
  statusCode Int?
  metadata   Json?
}
